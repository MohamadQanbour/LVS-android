<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/negative"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:contentPadding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/senderNameTextV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="المرسل"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/noteDateTxtV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:text="22/2/2222"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/noteTxtV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senderNameTextV"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="text text text text text"
            android:textColor="#fff"
            android:textSize="16sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>